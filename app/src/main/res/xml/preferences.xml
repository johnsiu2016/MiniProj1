<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:dialogTitle="Choose language"
        android:entries="@array/lang"
        android:entryValues="@array/lang_codes"
        android:key="lang_list"
        android:summary="Choose language"
        android:title="Language"/>

    <ListPreference
        android:dialogTitle="Show how many number of Toilets"
        android:entries="@array/toilets_num"
        android:entryValues="@array/toilets_num_codes"
        android:key="toilets_list"
        android:summary="Show how many entries at one time"
        android:title="Number of Toilets"/>
</PreferenceScreen>